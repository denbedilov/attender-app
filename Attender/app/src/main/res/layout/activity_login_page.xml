<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context=".loginPageActivity"
    android:background="#ffe9e9e9"
    android:orientation="vertical"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingTop="20dp"
    android:paddingBottom="20dp">

    <LinearLayout
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="2">

        <Space
            android:layout_width="fill_parent"
            android:layout_height="30sp" />

        <TextView
            android:gravity="center_horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="ATTENDER"
            android:id="@+id/attender_main_txt"
            android:textColor="#ff0d00a1"
            android:textSize="45sp"
            android:focusableInTouchMode="false"
            android:focusable="false"
            android:enabled="false" />

        <Space
            android:layout_width="fill_parent"
            android:layout_height="5sp" />

        <TextView
            android:gravity="center_horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="search. attend. meet."
            android:id="@+id/attender_sub_txt"
            android:textColor="#ff8c8c8c"
            android:textSize="30sp" />

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="2">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/email_layout"
            android:visibility="invisible">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email:"
                android:id="@+id/email_lbl"
                android:layout_weight="1"
                android:textColor="#ff757575"
                android:visibility="visible"
                android:textSize="12sp" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:ems="10"
                android:id="@+id/email_txt"
                android:layout_weight="2"
                android:textColor="#ff757575" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/password_layout"
            android:visibility="invisible">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Password:"
                android:id="@+id/password_lbl"
                android:layout_weight="1"
                android:textColor="#ff757575"
                android:visibility="visible"
                android:textSize="12sp" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:ems="10"
                android:id="@+id/password_txt"
                android:layout_weight="2"
                android:textColor="#ff757575" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:id="@+id/login_layout"
            android:visibility="invisible">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Login"
                android:id="@+id/login_cmd"
                android:gravity="center"
                android:onClick="loginPressed"
                android:textColor="#ff757575"
                android:background="@drawable/button_pressed"
                />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:paddingRight="30dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="3">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Login:"
                    android:id="@+id/login_txt"
                    android:textColor="#ff757575"
                    android:textSize="20dp"
                    android:paddingBottom="10dp"
                    android:paddingLeft="10dp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                >

                <LinearLayout
                    android:layout_height="fill_parent"
                    android:layout_width="fill_parent"
                    android:gravity="center_horizontal"
                    android:layout_weight="1"
                    android:background="#fffafbff"
                    android:id="@+id/google_plus">
                    <com.google.android.gms.common.SignInButton
                        android:id="@+id/sign_in_button"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:text="Google"
                        android:layout_weight="1"
                        android:background="@drawable/button_pressed"
                        />


                </LinearLayout>
                <Space
                    android:layout_width="5sp"
                    android:layout_height="5sp" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:background="#ff021cbf"
                    android:id="@+id/facebook">
                    <com.facebook.login.widget.LoginButton
                        android:id="@+id/login_button"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_gravity="center"
                        android:background="@drawable/button_pressed"
                        android:layout_weight="1"
                        android:paddingTop="25dp"
                        android:paddingBottom="25dp"
                        android:gravity="center_vertical|center_horizontal" />


                </LinearLayout>


                <Space
                    android:layout_width="5sp"
                    android:layout_height="5sp" />
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:gravity="center_horizontal"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:background="#ff2baaff"
                    >

                    <Button
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:text="User Login"
                        android:onClick="userLoginPressed"
                        android:id="@+id/userLogin_cmd"
                        android:nestedScrollingEnabled="false"
                        android:layout_weight="1"
                        android:textColor="#ffffffff"
                        android:clickable="true"
                        android:background="@drawable/button_pressed"


                        />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

        <Space
            android:layout_width="20sp"
            android:layout_height="20sp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="5">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="3">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="OR:"
                    android:id="@+id/or_txt"
                    android:textColor="#ff757575"
                    android:textSize="20dp"
                    android:paddingBottom="10dp"
                    android:paddingLeft="10dp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:gravity="center_horizontal"
                    android:layout_weight="1"
                    android:background="#ff00c2bc">

                    <Button
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:text="Connect as Guest"
                        android:onClick="confirmPressed"
                        android:id="@+id/button"
                        android:layout_weight="1"
                        android:textColor="#ffffffff"
                        android:background="@drawable/button_pressed"
                        />
                </LinearLayout>

                <Space
                    android:layout_width="5sp"
                    android:layout_height="5sp" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:gravity="center_horizontal"
                    android:layout_weight="1"
                    android:background="#ff6bd0ac"
                    >

                    <Button
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:text="Register"
                        android:onClick="registerPressed"
                        android:id="@+id/register_cmd"
                        android:layout_weight="1"
                        android:textColor="#ffffffff"
                        android:background="@drawable/button_pressed"
                        android:clickable="true"

                        />
                    </LinearLayout>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
