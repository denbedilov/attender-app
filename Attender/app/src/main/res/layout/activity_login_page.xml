<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context=".loginPageActivity"
    android:background="#ff292929"
    android:orientation="vertical"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingTop="20dp"
    android:paddingBottom="20dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="3"
        android:paddingLeft="20dp">

        <Space
            android:layout_width="fill_parent"
            android:layout_height="30dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ATTENDER"
            android:id="@+id/attender_main_txt"
            android:textColor="#ffffffff"
            android:textSize="65dp" />

        <Space
            android:layout_width="fill_parent"
            android:layout_height="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="search . attend . meet"
            android:id="@+id/attender_sub_txt"
            android:textColor="#ffffffff"
            android:textSize="30dp" />

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="4"
        android:paddingRight="40dp"
        android:paddingLeft="40dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="LOGIN:"
                android:id="@+id/login_txt"
                android:textColor="#ffffffff"
                android:textSize="30dp"
                android:paddingBottom="10dp"
                android:paddingLeft="10dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="5">

            <LinearLayout
                android:layout_height="fill_parent"
                android:layout_width="fill_parent"
                android:gravity="center_horizontal"
                android:layout_weight="1"
                android:id="@+id/google_plus">
                <com.google.android.gms.common.SignInButton
                    android:id="@+id/sign_in_button"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:text="Google"
                    android:layout_weight="1" />

            </LinearLayout>

            <Space
                android:layout_width="20dp"
                android:layout_height="fill_parent" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_weight="1"
                android:id="@+id/facebook">
                <com.facebook.login.widget.LoginButton
                    android:id="@+id/login_button"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_gravity="center"
                    android:background="@drawable/facebook_button_pressed"
                    android:layout_weight="1"
                    android:paddingTop="20dp"
                    android:paddingBottom="20dp"
                    android:gravity="center_vertical|center_horizontal" />


            </LinearLayout>
        </LinearLayout>

        <Space
            android:layout_width="fill_parent"
            android:layout_height="20dp" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="OR:"
                android:id="@+id/or_txt"
                android:textColor="#ffffffff"
                android:textSize="30dp"
                android:paddingBottom="10dp"
                android:paddingLeft="10dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="5">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center_horizontal">

                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:text="Connect as Guest"
                    android:onClick="confirmPressed"
                    android:id="@+id/button"
                    android:background="@drawable/guest_button_pressed"
                    android:layout_weight="1"
                    android:textColor="#ffffffff" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
