<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ff292929"
    android:paddingLeft="30dp"
    android:paddingRight="30dp"
    android:paddingTop="10dp"
    android:paddingBottom="40dp">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="3"
        android:id="@+id/Log_In_Out_Layout">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Hello,"
                    android:id="@+id/Hello_textView"
                    android:layout_weight="4"
                    android:textColor="#ffffffff"
                    android:textSize="20dp"
                    android:gravity="top|left" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="SHAI PE&apos;ER!"
                    android:id="@+id/User_Name_textView"
                    android:layout_weight="2"
                    android:textColor="#ffffffff"
                    android:textSize="20dp"
                    android:gravity="top|left"
                    android:paddingLeft="15dp" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="2"
            android:gravity="right">

            <Space
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="2" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="#ff1215ff"
                android:gravity="center_vertical|center_horizontal">

                <com.facebook.login.widget.LoginButton
                    android:layout_height="wrap_content"
                    android:layout_width="fill_parent"
                    android:background="#ff1215ff"
                    android:textColor="#ffffffff"
                    android:text="Log-Out"
                    android:id="@+id/logOut_cmd"
                    android:gravity="center_vertical|center_horizontal"
                    android:onClick="log_out_to_home"
                    android:layout_weight="1" />
            </LinearLayout>

            <Space
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="2" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="2"
        android:background="#ff799cd1"
        android:paddingRight="25dp"
        android:id="@+id/Search_Event_Layout"
        android:onClick="search_event_pressed">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Search Event"
            android:id="@+id/Search_textView"
            android:layout_weight="1"
            android:gravity="center_vertical|center_horizontal"
            android:textColor="#ffffffff"
            android:textSize="50dp" />

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/search_imageView"
            android:layout_weight="2"
            android:src="@drawable/search" />

    </LinearLayout>

    <Space
        android:layout_width="fill_parent"
        android:layout_height="20dp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="2"
        android:baselineAligned="false">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="#ff799cd1"
            android:layout_weight="1"
            android:paddingBottom="25dp"
            android:id="@+id/Event_Calendar_Layout"
            android:onClick="event_calendar_pressed">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Event Calendar"
                android:id="@+id/Calendar_textView"
                android:layout_weight="1"
                android:gravity="center_vertical|center_horizontal"
                android:textColor="#ffffffff"
                android:textSize="35dp" />

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/Calendar_imageView"
                android:src="@drawable/calendar"
                android:layout_weight="2" />

        </LinearLayout>

        <Space
            android:layout_width="20dp"
            android:layout_height="fill_parent" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="#ff799cd1"
            android:layout_weight="1"
            android:layout_gravity="right"
            android:paddingBottom="25dp"
            android:id="@+id/Chat_Layout"
            android:nestedScrollingEnabled="true"
            android:onClick="chat_pressed">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Chat"
                android:id="@+id/Chat_textView"
                android:layout_weight="1"
                android:gravity="center_vertical|center_horizontal"
                android:textColor="#ffffffff"
                android:textSize="35dp" />

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/Chat_imageView"
                android:src="@drawable/chat"
                android:layout_weight="2" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>