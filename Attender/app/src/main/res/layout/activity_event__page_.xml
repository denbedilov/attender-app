<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context="com.attender.rita.attender.Event_Page_Activity"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:paddingRight="10dp">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <Space
            android:layout_width="20px"
            android:layout_height="1sp" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/detailsLine"
            android:padding="5dp"
            android:background="@drawable/event_bg">

            <TextView
                android:layout_height="fill_parent"
                android:layout_width="fill_parent"
                android:text="Attend"
                android:textStyle="bold|italic"
                android:layout_weight="1"
                android:id="@+id/details_TEX"
                android:textSize="15dp">
            </TextView>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical"
                android:gravity="center_vertical|right"
                android:layout_weight="2">

                <Switch
                    android:id="@+id/attend_switch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"/>

            </LinearLayout>
        </LinearLayout>

        <Space
            android:layout_width="fill_parent"
            android:layout_height="1sp" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal"
            android:id="@+id/dateLine"
            android:padding="5dp"
            android:background="@drawable/event_bg">

            <TextView
                android:layout_height="fill_parent"
                android:layout_width="fill_parent"
                android:text="Date"
                android:textStyle="bold|italic"
                android:layout_weight="3"
                android:textSize="15dp">
            </TextView>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical"
                android:gravity="right"
                android:layout_weight="1">

                <TextView
                    android:layout_height="fill_parent"
                    android:layout_width="fill_parent"
                    android:text="1/11/1111"
                    android:id="@+id/date_lbl"
                    android:layout_weight="1"
                    android:gravity="center_vertical|right"
                    android:textSize="15dp">
                </TextView>
            </LinearLayout>
        </LinearLayout>

        <Space
            android:layout_width="fill_parent"
            android:layout_height="1sp" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal"
            android:id="@+id/cityLine"
            android:padding="5dp"
            android:background="@drawable/event_bg">

            <TextView
                android:layout_height="fill_parent"
                android:layout_width="fill_parent"
                android:text="City"
                android:textStyle="bold|italic"
                android:layout_weight="3"
                android:textSize="15dp">
            </TextView>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical"
                android:gravity="right"
                android:layout_weight="1">

                <TextView
                    android:layout_height="fill_parent"
                    android:layout_width="fill_parent"
                    android:text="city name"
                    android:id="@+id/cityName_lbl"
                    android:layout_weight="1"
                    android:gravity="center_vertical|right"
                    android:textSize="15dp">
                </TextView>
            </LinearLayout>
        </LinearLayout>

        <Space
            android:layout_width="fill_parent"
            android:layout_height="1sp" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal"
            android:id="@+id/addressLine"
            android:padding="5dp"
            android:background="@drawable/event_bg">

            <TextView
                android:layout_height="fill_parent"
                android:layout_width="fill_parent"
                android:text="Address"
                android:textStyle="bold|italic"
                android:layout_weight="3"
                android:textSize="15dp">
            </TextView>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical"
                android:gravity="right"
                android:layout_weight="1">

                <TextView
                    android:layout_height="fill_parent"
                    android:layout_width="fill_parent"
                    android:text="address name"
                    android:id="@+id/address_lbl"
                    android:layout_weight="1"
                    android:gravity="center_vertical|right"
                    android:textSize="15dp">
                </TextView>
            </LinearLayout>

        </LinearLayout>

        <Space
            android:layout_width="fill_parent"
            android:layout_height="1sp" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal"
            android:id="@+id/timeLine"
            android:padding="5dp"
            android:background="@drawable/event_bg">

            <TextView
                android:layout_height="fill_parent"
                android:layout_width="fill_parent"
                android:text="Time"
                android:textStyle="bold|italic"
                android:layout_weight="3"
                android:textSize="15dp">
            </TextView>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical"
                android:gravity="right"
                android:layout_weight="1">

                <TextView
                    android:layout_height="fill_parent"
                    android:layout_width="fill_parent"
                    android:text="00:00"
                    android:id="@+id/time_lbl"
                    android:layout_weight="1"
                    android:gravity="center_vertical|right"
                    android:textSize="15dp">
                </TextView>
            </LinearLayout>
        </LinearLayout>

        <Space
            android:layout_width="fill_parent"
            android:layout_height="1sp" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal"
            android:id="@+id/priceLine"
            android:padding="5dp"
            android:background="@drawable/event_bg">

            <TextView
                android:layout_height="fill_parent"
                android:layout_width="fill_parent"
                android:text="Price"
                android:textStyle="bold|italic"
                android:layout_weight="3"
                android:textSize="15dp">
            </TextView>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical"
                android:gravity="right"
                android:layout_weight="1">

                <TextView
                    android:layout_height="fill_parent"
                    android:layout_width="fill_parent"
                    android:text="Free"
                    android:id="@+id/price_lbl"
                    android:layout_weight="1"
                    android:gravity="center_vertical|right"
                    android:textSize="15dp">
                </TextView>
            </LinearLayout>
        </LinearLayout>

        <Space
            android:layout_width="fill_parent"
            android:layout_height="1sp" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal"
            android:id="@+id/attendingLine"
            android:padding="5dp"
            android:background="@drawable/event_bg">

            <TextView
                android:layout_height="fill_parent"
                android:layout_width="fill_parent"
                android:text="Attending"
                android:textStyle="bold|italic"
                android:layout_weight="3"
                android:textSize="15dp">
            </TextView>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical"
                android:gravity="right"
                android:layout_weight="1">

                <TextView
                    android:layout_height="fill_parent"
                    android:layout_width="fill_parent"
                    android:text="80/100"
                    android:id="@+id/attending_lbl"
                    android:layout_weight="1"
                    android:gravity="center_vertical|right"
                    android:textSize="15dp">
                </TextView>
            </LinearLayout>
        </LinearLayout>

        <Space
            android:layout_width="fill_parent"
            android:layout_height="1sp" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal"
            android:id="@+id/hostLine"
            android:padding="5dp"
            android:background="@drawable/event_bg">

            <TextView
                android:layout_height="fill_parent"
                android:layout_width="fill_parent"
                android:text="Host"
                android:textStyle="bold|italic"
                android:layout_weight="3"
                android:textSize="15dp">
            </TextView>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical"
                android:gravity="right"
                android:layout_weight="1">

                <TextView
                    android:layout_height="fill_parent"
                    android:layout_width="fill_parent"
                    android:text="Host name"
                    android:id="@+id/host_lbl"
                    android:layout_weight="1"
                    android:gravity="center_vertical|right"
                    android:textSize="15dp">
                </TextView>
            </LinearLayout>
        </LinearLayout>

        <Space
            android:layout_width="fill_parent"
            android:layout_height="1sp" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal"
            android:id="@+id/eventUrlLine"
            android:padding="5dp"
            android:background="@drawable/event_bg">

            <TextView
                android:layout_height="fill_parent"
                android:layout_width="fill_parent"
                android:text="Event URL"
                android:textStyle="bold|italic"
                android:layout_weight="3"
                android:textSize="15dp">
            </TextView>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical"
                android:gravity="right"
                android:layout_weight="1">

                <TextView
                    android:layout_height="fill_parent"
                    android:layout_width="fill_parent"
                    android:text="URL"
                    android:id="@+id/url_lbl"
                    android:layout_weight="1"
                    android:gravity="center_vertical|right"
                    android:textSize="15dp">
                </TextView>
            </LinearLayout>
        </LinearLayout>

        <Space
            android:layout_width="fill_parent"
            android:layout_height="1sp" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical"
            android:id="@+id/descriptionLine"
            android:padding="5dp"
            android:layout_weight="1"
            android:background="@drawable/event_bg">

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="fill_parent"
                android:text="Description:"
                android:textStyle="bold|italic"
                android:textSize="15dp"
                android:id="@+id/desc_txt"
                android:onClick="descCloseClick">
            </TextView>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="left">

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="fill_parent"
                    android:scrollbars = "none"
                    android:text="Description"
                    android:id="@+id/description_lbl"
                    android:layout_weight="1"
                    android:onClick="onInfoClick"
                    android:textSize="15dp">
                </TextView>
            </LinearLayout>
        </LinearLayout>

        <Space
            android:layout_width="fill_parent"
            android:layout_height="1sp" />

    </LinearLayout>


</LinearLayout>
