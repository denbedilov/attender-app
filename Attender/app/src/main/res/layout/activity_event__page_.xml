<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context="com.attender.rita.attender.Event_Page_Activity"
    android:background="#ff292929"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:paddingRight="10dp">


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:id="@+id/headLine"
        android:padding="10dp">

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:text="Event Name"
        android:textStyle="bold|italic"
        android:textSize="20dp"
        android:id="@+id/evName_lbl"
        android:textColor="#ffffffff"
        android:gravity="center_vertical|center_horizontal">
    </TextView>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:background="#ffffffff">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/detailsLine"
            android:padding="5dp">

            <TextView
                android:layout_height="fill_parent"
                android:layout_width="fill_parent"
                android:text="Details"
                android:textStyle="bold|italic"
                android:layout_weight="1"
                android:id="@+id/details_TEX"
                android:textSize="15dp">
            </TextView>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical"
                android:gravity="center_vertical|right"
                android:layout_weight="3">

                <CheckBox
                    android:layout_height="fill_parent"
                    android:layout_width="fill_parent"
                    android:text="Attend"
                    android:id="@+id/attend_check"
                    android:checked="false"
                    android:gravity="center_vertical"
                    android:layout_weight="1"
                    android:textSize="15dp">
                </CheckBox>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal"
            android:id="@+id/dateLine"
            android:padding="5dp">

            <TextView
                android:layout_height="fill_parent"
                android:layout_width="fill_parent"
                android:text="Date"
                android:textStyle="bold|italic"
                android:layout_weight="3"
                android:textSize="15dp">
            </TextView>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical"
                android:gravity="right"
                android:layout_weight="1">

                <TextView
                    android:layout_height="fill_parent"
                    android:layout_width="fill_parent"
                    android:text="1/11/1111"
                    android:id="@+id/date_lbl"
                    android:layout_weight="1"
                    android:gravity="center_vertical|right"
                    android:textSize="15dp">
                </TextView>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal"
            android:id="@+id/cityLine"
            android:padding="5dp">

            <TextView
                android:layout_height="fill_parent"
                android:layout_width="fill_parent"
                android:text="City"
                android:textStyle="bold|italic"
                android:layout_weight="3"
                android:textSize="15dp">
            </TextView>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical"
                android:gravity="right"
                android:layout_weight="1">

                <TextView
                    android:layout_height="fill_parent"
                    android:layout_width="fill_parent"
                    android:text="city name"
                    android:id="@+id/cityName_lbl"
                    android:layout_weight="1"
                    android:gravity="center_vertical|right"
                    android:textSize="15dp">
                </TextView>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal"
            android:id="@+id/addressLine"
            android:padding="5dp">

            <TextView
                android:layout_height="fill_parent"
                android:layout_width="fill_parent"
                android:text="Address"
                android:textStyle="bold|italic"
                android:layout_weight="3"
                android:textSize="15dp">
            </TextView>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical"
                android:gravity="right"
                android:layout_weight="1">

                <TextView
                    android:layout_height="fill_parent"
                    android:layout_width="fill_parent"
                    android:text="address name"
                    android:id="@+id/address_lbl"
                    android:layout_weight="1"
                    android:gravity="center_vertical|right"
                    android:textSize="15dp">
                </TextView>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal"
            android:id="@+id/timeLine"
            android:padding="5dp">

            <TextView
                android:layout_height="fill_parent"
                android:layout_width="fill_parent"
                android:text="Time"
                android:textStyle="bold|italic"
                android:layout_weight="3"
                android:textSize="15dp">
            </TextView>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical"
                android:gravity="right"
                android:layout_weight="1">

                <TextView
                    android:layout_height="fill_parent"
                    android:layout_width="fill_parent"
                    android:text="00:00"
                    android:id="@+id/time_lbl"
                    android:layout_weight="1"
                    android:gravity="center_vertical|right"
                    android:textSize="15dp">
                </TextView>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal"
            android:id="@+id/priceLine"
            android:padding="5dp">

            <TextView
                android:layout_height="fill_parent"
                android:layout_width="fill_parent"
                android:text="Price"
                android:textStyle="bold|italic"
                android:layout_weight="3"
                android:textSize="15dp">
            </TextView>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical"
                android:gravity="right"
                android:layout_weight="1">

                <TextView
                    android:layout_height="fill_parent"
                    android:layout_width="fill_parent"
                    android:text="Free"
                    android:id="@+id/price_lbl"
                    android:layout_weight="1"
                    android:gravity="center_vertical|right"
                    android:textSize="15dp">
                </TextView>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal"
            android:id="@+id/attendingLine"
            android:padding="5dp">

            <TextView
                android:layout_height="fill_parent"
                android:layout_width="fill_parent"
                android:text="Attending"
                android:textStyle="bold|italic"
                android:layout_weight="3"
                android:textSize="15dp">
            </TextView>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical"
                android:gravity="right"
                android:layout_weight="1">

                <TextView
                    android:layout_height="fill_parent"
                    android:layout_width="fill_parent"
                    android:text="80/100"
                    android:id="@+id/attending_lbl"
                    android:layout_weight="1"
                    android:gravity="center_vertical|right"
                    android:textSize="15dp">
                </TextView>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal"
            android:id="@+id/hostLine"
            android:padding="5dp">

            <TextView
                android:layout_height="fill_parent"
                android:layout_width="fill_parent"
                android:text="Host"
                android:textStyle="bold|italic"
                android:layout_weight="3"
                android:textSize="15dp">
            </TextView>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical"
                android:gravity="right"
                android:layout_weight="1">

                <TextView
                    android:layout_height="fill_parent"
                    android:layout_width="fill_parent"
                    android:text="Host name"
                    android:id="@+id/host_lbl"
                    android:layout_weight="1"
                    android:gravity="center_vertical|right"
                    android:textSize="15dp">
                </TextView>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal"
            android:id="@+id/eventUrlLine"
            android:padding="5dp">

            <TextView
                android:layout_height="fill_parent"
                android:layout_width="fill_parent"
                android:text="Event URL"
                android:textStyle="bold|italic"
                android:layout_weight="3"
                android:textSize="15dp">
            </TextView>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical"
                android:gravity="right"
                android:layout_weight="1">

                <TextView
                    android:layout_height="fill_parent"
                    android:layout_width="fill_parent"
                    android:text="URL"
                    android:id="@+id/url_lbl"
                    android:layout_weight="1"
                    android:gravity="center_vertical|right"
                    android:textSize="15dp">
                </TextView>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal"
            android:id="@+id/descriptionLine"
            android:padding="5dp"
            android:layout_weight="1">

            <TextView
                android:layout_height="fill_parent"
                android:layout_width="fill_parent"
                android:text="Description"
                android:textStyle="bold|italic"
                android:layout_weight="3"
                android:textSize="15dp">
            </TextView>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="right"
                android:layout_weight="1">

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="fill_parent"
                    android:scrollbars = "none"
                    android:text="Description"
                    android:id="@+id/description_lbl"
                    android:layout_weight="1"
                    android:gravity="center_vertical|right"
                    android:textSize="15dp">
                </TextView>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal"
        android:gravity="center"
        android:id="@+id/footerLine"
        android:layout_weight="5"
        android:paddingTop="5dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <Space
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="2" />

            <Button
                android:layout_height="wrap_content"
                android:layout_width="fill_parent"
                android:text="Open Chat"
                android:id="@+id/chat_cmd"
                android:layout_weight="1" />

            <Space
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="2" />
        </LinearLayout>


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <Space
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="6" />

            <Button
                android:layout_height="fill_parent"
                android:layout_width="fill_parent"
                android:textColor="#fff6f4ff"
                android:text="Attendees"
                android:id="@+id/attendees_cmd"
                android:onClick="attendeesPressed"
                android:layout_weight="2"
                />

            <Space
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="6" />
        </LinearLayout>

    </LinearLayout>


</LinearLayout>
